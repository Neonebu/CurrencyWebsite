<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CurrencyWebsite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
    </header>
    <h1>Currency Search</h1>
    <div class="input-group">
        <input type="search" class="form-control rounded" placeholder="Currency Code" id="txtSearch" aria-label="Search"
               aria-describedby="search-addon" />
        <button type="button" class="btn btn-dark" id="searchBut">Search</button>
    </div>
    <h2 id="hdCur"></h2>
    <div id="area"></div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://d3js.org/d3.v7.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
